<%- include("../header"); %>
    <h1>Login</h1>

    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul>

    <form action="/encargado/encLogin" method="POST">
      <div>
        <input
          type="text"
          id="codigo"
          name="codigo"
          placeholder="Codigo"
          required
        />
      </div>
      <div>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <div>
        <input type="submit" value="Login" />
      </div>

      <a href="/encargado/encRegistro">Register</a>
    </form>
<%- include("../footer"); %>