<%- include("../header"); %>
<div class="col-12">
    <h1>Agregar Materias</h1>
    <form method="post" action="/encargado/fMateriaInsertar">
        <input value="<%= user%>" name="user" type="hidden">
        <div class="form-group">
            <label for="codigo">Sigla</label>
            <input required id="siglam" placeholder="Sigla Materia" class="form-control" type="text"
                name="siglam">
        </div>
        <div class="form-group">
            <label for="plan">Grupo</label>
            <input required id="grupom" placeholder="Grupo Materia" class="form-control" type="text"
                name="grupom">
        </div>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input required id="nombremat" placeholder="Nombre de la Materia" class="form-control" type="text"
                name="nombremat">
        </div>
        <div>
            <select class="selectpicker" data-style="btn-info" name="selectpicker">
                <optgroup label="Select Table">
                    <option value="">Seleccione carrera</option>
                    <% carrerasnom.forEach(carrerasnom => { %>
                    <option value="<%= carrerasnom.codigoc %><%= carrerasnom.planc %>"><%= carrerasnom.nombrecarrera %></option>
                    <% }) %>
                </optgroup>
            </select>
        </div>
      <br>
     </br>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/encargado/fMateria" class="btn btn-primary">Volver</a>
        </div>
        
    </form>
</div>
<%- include("../footer"); %>