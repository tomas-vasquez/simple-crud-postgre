<%- include("../header"); %>
<div class="col-12">
    <h1>Editar <%= carreras.nombrecarrera %></h1>
    <form method="post" action="/encargado/fCarreraActualizar">
        <input value="<%= carreras.codigoc %>" name="codigoc" type="text">
        <input value="<%= carreras.planc %>" name="planc" type="text">
        <input value="<%= user%>" name="user" type="hidden">
        <div class="form-group">
            <label for="precio">Estado</label>
            <input value="<%= carreras.estado %>" required id="estado" placeholder="Estado"
                class="form-control" type="number" name="estado">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/encargado/fCarrera" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>