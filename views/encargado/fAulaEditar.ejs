<%- include("../header"); %>
<div class="col-12">
    <h1>Editar <%= aulas.idaula %></h1>
    <form method="post" action="/encargado/fAulaActualizar">
        <input value="<%= aulas.idaula %>" name="id" type="hidden">
        <input value="<%= user%>" name="user" type="hidden">
        <div class="form-group">
            <label for="precio">Estado</label>
            <input value="<%= aulas.estado %>" required id="estado" placeholder="Estado"
                class="form-control" type="number" name="estado">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/encargado/fAula" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>